<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MiSmartAlarm.AboutPage"
             Title="About">

    <ScrollView>
        <StackLayout Margin="10">
            <Label Text="MiSmartAlarm" FontSize="Large"/>
            <Label Text="An open-source smart alarm app for Xiaomi MiBand device family."/>
            <Label Text="Created by XFox"/>

            <Label Text="Found a bug or wanna contribute?" Margin="0,10,0,0"/>
            <Button Text="Visit GitHub repo" HorizontalOptions="StartAndExpand" Clicked="Github_Clicked"/>

            <Label Text="Like my app?"/>
            <Button Text="Donate!" HorizontalOptions="StartAndExpand" Clicked="Donate_Clicked"/>

            <Label Text="Wanna hire me?"/>
            <Button Text="Visit my website" HorizontalOptions="StartAndExpand" Clicked="Website_Clicked"/>
        </StackLayout>
    </ScrollView>
</ContentPage>