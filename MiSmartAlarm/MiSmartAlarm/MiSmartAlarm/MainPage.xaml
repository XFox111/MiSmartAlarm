<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:MiSmartAlarm"
             x:Class="MiSmartAlarm.MainPage"
             Title="MiSmartAlarm">

    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Settings" Activated="SettingsButton_Activated"/>
        <ToolbarItem Text="About" Activated="AboutButton_Activated"/>
    </ContentPage.ToolbarItems>

    <StackLayout>
        <Label Text="You have no configured alarms. Press '+' to add one." 
               HorizontalOptions="Center"
               LineBreakMode="WordWrap"
               VerticalOptions="CenterAndExpand" />
    </StackLayout>

</ContentPage>
